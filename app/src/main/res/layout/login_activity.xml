<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        tools:ignore="UseCompoundDrawables">

        <ImageView
            android:id="@+id/app_icon"
            android:layout_width="173dp"
            android:layout_height="167dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="32dp"
            app:srcCompat="@drawable/nfcplay" />

        <TextView
            android:layout_width="266dp"
            android:layout_height="78dp"
            android:layout_marginBottom="16dp"
            android:gravity="center"
            android:text="@string/nfc_play"
            android:textSize="40sp"
            android:textStyle="bold" />
    </LinearLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/username_field_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:hint="@string/username_hint"
        app:boxCornerRadiusTopEnd="26dp"
        app:boxCornerRadiusTopStart="26dp"
        app:boxCornerRadiusBottomStart="26dp"
        app:boxCornerRadiusBottomEnd="26dp"
        app:counterEnabled="true"
        app:counterMaxLength="30"
        app:boxStrokeColor="@android:color/transparent">

        <EditText
            android:id="@+id/username_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints=""
            android:inputType="text"
            android:singleLine="true"
            app:cornerRadius="16dp"
            tools:ignore="LabelFor,VisualLintTextFieldSize"
            />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/password_field_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:boxCornerRadiusTopEnd="26dp"
        app:boxCornerRadiusTopStart="26dp"
        app:boxCornerRadiusBottomStart="26dp"
        app:boxCornerRadiusBottomEnd="26dp"
        android:layout_marginHorizontal="16dp"
        android:hint="@string/password_hint"
        app:passwordToggleEnabled="true"
        app:boxStrokeColor="@android:color/transparent">

        <EditText
            android:id="@+id/password_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            app:cornerRadius="16dp"
            android:autofillHints=""
            tools:ignore="LabelFor,VisualLintTextFieldSize" />

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/login_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:text="@string/login_button_text"
        android:textAllCaps="false"
        app:cornerRadius="16dp"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/no_tienes_cuenta"
        android:textSize="16sp"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/register_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/reg_strate_aqu"
        android:textAllCaps="false"
        android:layout_marginTop="8dp"
        app:cornerRadius="16dp"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>

</LinearLayout>
